
extend type Query {
    getFamily(id: ID!): Family
}

extend type Mutation {
    createFamily(surname: String!): ID!
    addMember(familyId: ID!, memberName: String!, role: Role!): Boolean
}

type Family {
    id: ID
    surname: String
    members: [Member]
    accounts: [Account]
    budgets: [Budget]
}

type Member {
    id: ID
    name: String
    role: Role
}

enum Role {
    PARENT,
    CHILD,
    OTHER
}

